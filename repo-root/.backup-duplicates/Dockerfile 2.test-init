# Dockerfile for test database initialization
FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm@8

# Install Prisma CLI
RUN pnpm add -g prisma @prisma/client tsx

# Copy package files
COPY package.json pnpm-lock.yaml ./
COPY packages/database/package.json ./packages/database/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy Prisma schema and migration files
COPY packages/database/prisma ./prisma/
COPY packages/database/src ./src/

# Generate Prisma client
RUN npx prisma generate

# Default command
CMD ["echo", "Test database initialization container ready"]