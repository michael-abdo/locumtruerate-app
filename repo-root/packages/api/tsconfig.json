{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/documentation.ts",
    "src/middleware/feature-gate.ts",
    "src/middleware/usage-tracking.ts",
    "src/services/search.ts",
    "src/services/cron-jobs.ts",
    "src/services/lead-scoring.ts",
    "src/versioning.ts",
    "src/routers/jobs.ts",
    "src/routers/users.ts",
    "src/routers/auth.ts",
    "src/routers/applications.ts",
    "src/routers/admin.ts",
    "src/routers/analytics.ts",
    "src/routers/calculations.ts",
    "src/routers/leads.ts",
    "src/routers/payments.ts",
    "src/routers/lead-marketplace.ts",
    "src/routers/search.ts",
    "src/routers/support.ts",
    "src/middleware.ts"
  ]
}